@model JAUNDICE.CORE.NeonateDiagnosis

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="col-md-8 ml-auto mr-auto">
    <div class="card">
        <div class="card-header card-header-success card-header-icon">
            <div class="card-icon">
                <i class="material-icons">child_care</i>
            </div>
            <h4 class="card-title">Neonate Diagnosis</h4>

            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NeedForFollowup)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NeedForFollowup)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Treatment)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Treatment)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Disorder)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Disorder.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Neonate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Neonate.Id)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="NeonateId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>